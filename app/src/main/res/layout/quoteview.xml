<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__solid_white">


    <ImageView
        android:id="@+id/viewquoteimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:contentDescription=""
        app:srcCompat="@drawable/church_silhouette_194202"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/viewquotetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewquoteimage"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/viewquotedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewquotetitle"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="23sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/quotedescriber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewquotedate"
        android:layout_alignStart="@+id/viewquotedate"
        android:layout_below="@+id/viewquotedate"
        android:layout_marginTop="66dp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="21sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText" />


</RelativeLayout>