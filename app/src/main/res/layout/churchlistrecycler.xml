<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/sendtochurchchosen"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="fitCenter"
            android:src="@drawable/churchchoosebutton"
            tools:ignore="ContentDescription"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="@string/churches_around_the_world"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sendtochurchchosen"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/sendtochurchchosen"
            android:text="TAP TO VIEW CHURCH CHOSEN" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/churchlistrecycler"></android.support.v7.widget.RecyclerView>

</LinearLayout>