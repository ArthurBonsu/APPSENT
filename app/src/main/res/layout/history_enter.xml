<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aboutviewbackground"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageButton
        android:id="@+id/histenterimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/histentertitle"
        android:layout_alignStart="@+id/histentertitle"
        android:layout_alignTop="@+id/histentertitle"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="14dp"
        android:background="#00ffffff"
        app:srcCompat="@drawable/camerabutton4"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/histentertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mChurchhistImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="set the title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/histenterdescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/histDateCreated"
        android:layout_weight="0.21"
        android:ems="10"
        android:hint="Kindly write your church history"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/histenterypost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/authui_colorPrimary"
        android:text="POST  CHURCH HISTORY" />


</LinearLayout>