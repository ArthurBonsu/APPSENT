<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__composer_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1200sp">


        <EditText
            android:id="@+id/Account_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="69dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/cardview_shadow_start_color"
            tools:text="Account Number"
            android:layout_alignEnd="@+id/editText18" />

        <EditText
            android:id="@+id/Amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Account_Number"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Amt"
            android:textColor="@color/cardview_shadow_start_color" />


        <EditText
            android:id="@+id/CurrencyCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/Amt"
            android:layout_alignBottom="@+id/Amt"
            android:layout_toEndOf="@+id/Amt"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="CURRENCY-CODE"
            android:textColor="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Amt"
            android:layout_marginTop="65dp"
            android:text="Provide Additional Details"
            android:textColor="@color/authui_inputTextColorDark" />

        <EditText
            android:id="@+id/CardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Card Name"
            android:textColor="@color/cardview_shadow_start_color" />

        <EditText
            android:id="@+id/City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CardName"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="City"
            android:textColor="@color/cardview_shadow_start_color" />

        <EditText
            android:id="@+id/COUNTRY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/City"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/City"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="COUNTRY"
            android:textColor="@color/cardview_shadow_start_color" />

        <EditText
            android:id="@+id/StreetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/City"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Street Address"
            android:textColor="@color/cardview_shadow_start_color" />

        <Button
            android:id="@+id/SendSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/COUNTRY"
            android:layout_below="@+id/StreetAddress"
            android:layout_marginStart="27dp"
            android:layout_marginTop="11dp"
            android:background="@android:color/holo_green_dark"
            android:text="SEND" />

        <Button
            android:id="@+id/SendCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/SendSubmit"
            android:layout_alignBottom="@+id/SendSubmit"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_green_dark"
            android:text="CANCEL" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/SendCancel"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:textColor="@color/authui_inputTextColorDark"
            tools:text="Provide your details" />

        <EditText
            android:id="@+id/editText18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginTop="27dp"
            android:layout_alignTop="@+id/Account_Number"
            android:layout_alignStart="@+id/textView8" />

        <EditText
            android:id="@+id/CVC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Amt"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/BIN"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="CV/C"
            android:textColor="@color/cardview_shadow_start_color" />

        <EditText
            android:id="@+id/BIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="BIN"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_alignBaseline="@+id/CVC"
            android:layout_alignBottom="@+id/CVC"
            android:layout_toEndOf="@+id/Amt" />

        <EditText
            android:id="@+id/ZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Account_Number"
            android:layout_alignStart="@+id/SendSubmit"
            android:layout_toEndOf="@+id/Account_Number"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ZIP"
            android:textColor="@color/cardview_shadow_start_color" />


    </RelativeLayout>


</ScrollView>