<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eglisahomepage"
    android:orientation="vertical">


    <TextView
        android:id="@+id/egllisaofficia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eglisaofficialprogressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="68dp"
        android:text="EGLISA OFFICIAL"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="60sp" />

    <ProgressBar
        android:id="@+id/eglisaofficialprogressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eglisasignupbutton"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="14dp"
        android:indeterminate="false"
        android:max="1000"
        android:progress="0"
        android:layout_alignStart="@+id/egllisaofficia" />
</RelativeLayout>