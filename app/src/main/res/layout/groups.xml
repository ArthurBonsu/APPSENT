<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__solid_white">


    <ImageView
        android:id="@+id/grouplistimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosegroup"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        app:srcCompat="@drawable/church_silhouette_194202"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mgroupname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grouplistimage"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mgroupdate"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mgroupname"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10sp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/churchcreater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mgroupdate"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mgroupdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/churchcreater"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/choosegroup"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="#00ffffff"
        android:scaleType="fitCenter"

        app:srcCompat="@drawable/churchnotchooseputton"
        tools:ignore="ContentDescription" />


</RelativeLayout>