<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bridge"
    android:orientation="vertical">

    <EditText
        android:id="@+id/signinemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        android:text="email"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signinpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signinemail"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signinpassword"
        android:layout_marginLeft="135dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="36dp"
        android:text="@string/sign_in" />

    <Button
        android:id="@+id/signupagainhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:text="NEED A NEW ACCOUNT" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signinbtngoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signin"
        android:layout_alignStart="@+id/signin"
        android:layout_below="@+id/signin" />

</RelativeLayout>