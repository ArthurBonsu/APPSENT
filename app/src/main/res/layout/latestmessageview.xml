<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/aboutbackground">


    <ImageView
        android:id="@+id/latestmessageimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/church_silhouette_194202"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/latestmessagetitleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latestmessageimageview"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@color/tw__solid_white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/latestmessagesetdateview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="19sp"
        android:layout_below="@+id/latestmessagetitleview"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/latestmessageusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latestmessagedescribe"
        android:layout_alignStart="@+id/latestmessagedescribe"
        android:layout_below="@+id/latestmessagedescribe"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/preachernameview"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latestmessageusername"
        android:layout_alignStart="@+id/latestmessageusername"
        android:layout_below="@+id/latestmessageusername"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/tw__solid_white"
        android:textSize="19sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latestmessageusername"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignStart="@+id/latestmessageusername"
        android:layout_marginBottom="35dp" />

    <ImageButton
        android:id="@+id/streamaudio"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="#00ffffff"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/playbutton2"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/latestmessageusername"
        android:layout_alignEnd="@+id/latestmessageimageview"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/audiotext"
        android:layout_width="250sp"
        android:layout_height="30sp"
        android:layout_below="@+id/preachernameview"

        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/streamaudio"
        android:text="TextView" />

    <TextView
        android:id="@+id/latestmessagedescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latestmessagesetdateview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textColor="@color/tw__solid_white"
        android:textSize="19sp" />

</RelativeLayout>