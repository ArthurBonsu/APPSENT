<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw__solid_white">


    <ImageView
        android:id="@+id/personalpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/church_silhouette_194202"
        tools:ignore="ContentDescription,ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/personalpicturetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalpicture"
        android:layout_marginTop="22dp"
        android:padding="5sp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/personalpicturedescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personalpicturetitle"
        android:layout_alignStart="@+id/personalpicturetitle"
        android:layout_below="@+id/personalpicturetitle"
        android:layout_marginTop="22dp"
        android:padding="5sp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/personalpicusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/personalpicturedescription"
        android:layout_alignStart="@+id/personalpicturedescription"
        android:layout_below="@+id/personalpicturedescription"
        android:layout_marginTop="22dp"
        android:padding="5sp"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>